/* pages/indexs/indexs.wxss */
.title_top{
    width: 100%;
    height: 50px;
    /* 设置文本居中 */
    text-align: center;
    /* 设置文本垂直居中 */
    line-height: 50px;
    /* 设置文本颜色 */
    color: #1409b2;
    /* 设置字体大小 */
    font-size: 21px;
    /* 设置字体粗细 */
    font-weight: 600;
    /* 设置背景颜色 */
    background-color: #aa9e9e;
}
.mode_app{
    width: 40%;
    height: 80px;
    /* 设置背景颜色 */
    background-color: #f5f5f5;
    /* 设置边框 */
    border: 1px solid #ccc;
    /* 设置圆角 */
    border-radius: 10px;
    /* 设置外边距 */
    margin: 10px;
    /* 内部元素垂直居中 */
    display: flex;
    /* 内部元素水平居中 */
    justify-content: center;
    /* 内部元素垂直居中 */
    align-items: center;
    /* 设置内边距 */
    padding: 3px;
    /* 设置字体大小 */
    font-size: 15px;
}

.mode_main{
    width: 100%;
    height: 100%;
    /* 设置内边距 */
    padding: 10px;
    display: flex;
}