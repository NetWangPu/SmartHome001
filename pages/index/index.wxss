/* 设置页面背景颜色 */
page {
    background-color: #b8b8b8;
    /* 设置页面高度 */
    height: 100%;
    /* 设置页面宽度 */
    width: 100%;
}

.title_top{
    width: 100%;
    height: 50px;
    /* 设置文本居中 */
    text-align: center;
    /* 设置文本垂直居中 */
    line-height: 50px;
    /* 设置文本颜色 */
    color: #000000;
    /* 设置字体大小 */
    font-size: 21px;
    /* 设置字体粗细 */
    font-weight: 600;
    /* 设置背景颜色 */
    background-color: #aa9e9e;
}
.mode_app{
    width: 95%;
    height: 90px;
    /* 设置文本居中 */
    text-align: center;
    /* 设置文本垂直居中 */
    line-height: 90px;
    /* 设置文本颜色 */
    color: #000000;
    /* 设置字体大小 */
    font-size: 21px;
    /* 设置字体粗细 */
    font-weight: 600;
    /* 设置背景颜色 */
    background-color: #aa9e9e;
    /*圆角*/
    border-radius: 10px;
    /*设置边框*/
    border: 5px solid #000000;
    /*设置边框阴影*/
    box-shadow: 0 0 10px #000000;
    /*元素居中*/
    margin: 0 auto;
}
